


pipeline {
    agent any
    tools {
    	maven 'M3'
  	}
    stages {
    	stage('echo') {
            steps {
                sh 'mvn --version'
            }
        }
        stage('build') {
            steps {
                sh 'mvn -f arith-api/pom.xml clean package'
            }
            post {
	            always {
	                junit 'arith-api/target/surefire-reports/*.xml'
	            }
         	}
        }
    }
    post {
	    always {
	        emailext body: 'Arith-Api - Jenkins Build',  subject: 'Jenkins Build'
	    }
	}
} 